{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es6"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "types": ["jest"]
    },
    "include": [
        "types/**/*.ts",
        "ts-tests/**/*.ts",
        "src/operations/**/*.ts",
        "__tests__/operations/**/*.ts"
    ]
}
